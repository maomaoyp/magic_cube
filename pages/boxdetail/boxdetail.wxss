/* pages/boxdetail/boxdetail.wxss */
page {
   background: #ccc;
}
.game-group {
  width: 700rpx;
  height: 600rpx;
  margin: 40rpx 30rpx;
  border-radius: 10rpx;
}
.img-group {
  width: 700rpx;
  height: 450rpx;
    position: relative;
}
.img-game {
  width: 100%;
  height: 100%;
  border-radius:20rpx 20rpx 0 0;
}

.img-title {
  width: 650rpx;
  position: absolute;
  left:20rpx;
  bottom: 15rpx;
  font-size: large;
  padding: 5rpx;
  font-family: "黑体";
  color:white;
  display: flex;
  flex-wrap:wrap;
}

.icon-box {
  width: 100%;
  height: 150rpx;
  background-color: white;
  border-radius: 0 0 20rpx 20rpx;
}

.icon-box image {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 30rpx;
}

.app-name {
  color: #000;
  vertical-align:top;
  display: inline-block;
  margin-top: 20rpx;
}

button {
  float: right;
  height: 80rpx;
  border-radius: 80rpx;
  background-color: blueviolet;
  margin: 15px;
  font-size: smaller;
  color: white;
}

